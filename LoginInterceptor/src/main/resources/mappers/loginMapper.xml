<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="user">

	<select id="login" resultType="UserVO">
		select * from tbl_user
		where userId
		= #{userid}
	</select>

	<insert id="loginCreate" parameterType="UserVO">

		insert into
		tbl_user(userid,userpw,usernm,email,auth) values
		(#{userid},#{userpw},#{usernm},#{email},0)

	</insert>

  <select id="checkId" resultType="java.lang.Integer">
     select count(1) from tbl_user where userid = #{userid}
   </select>
   
    <update id="userUpdate" parameterType="UserVO">
     update tbl_user
       set userpw = #{userpw},
           usernm = #{usernm},
           email = #{email}
     where userid = #{userid}
     </update>
     
     <update id="authUpdate" parameterType="UserVO">
     update tbl_user
       set auth = #{auth}
     where userid = #{userid}
     </update>
   

</mapper> 